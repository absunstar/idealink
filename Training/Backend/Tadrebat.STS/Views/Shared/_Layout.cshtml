@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="author" content="STS-Training" />
    <meta name="robots" content="index, follow" />
    <meta name="description" content="STS-Training" />
    <meta name="keywords" content="STS-Training" />

    <title>STS-Training</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />

    <title>STS-Training</title>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg header-top">
            <a class="navbar-brand" href="@ViewBag.ClientURL">
                <img src="~/img/main/logo.png" class="logo-header" alt="" />
            </a>
        </nav>
        <nav class="navbar navbar-expand-lg header-menu">

            <div class="navbar-collapse offcanvas-collapse" id="header-menu">
                <ul class="navbar-nav mr-auto">
                    @if (!string.IsNullOrWhiteSpace(name))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="true">@name</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>

        </nav>

    </header>

    <main>
        @RenderBody()
    </main>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/js/custom.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
